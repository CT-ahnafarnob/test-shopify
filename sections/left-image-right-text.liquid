{% liquid
  assign heading_text = section.settings.heading_text
  assign short_description = section.settings.short_description
  assign button_text = section.settings.button_text
  assign button_link = section.settings.button_link
%}

<style>
      
     .{{section.id}}  {
       display: flex;
       justify-content: flex-end;
       align-items: center;
       background-image: url('{{ 'banner_background.png' | asset_url }}');
       background-size: contain;  
       background-position: left center;
       height: 550px;
       padding: 0; 
       margin: 0 auto; 
      max-width: 1400px; 
       box-sizing: border-box;

     }

     .{{section.id}} .quiztext{
       max-width: 700px;
     margin-left: auto;
     padding-left: 50px;
     text-align: left;
     margin-right: 20px;
     }

     .{{section.id}} .quiztext h1{
           font-family: 'Poppins';
           font-weight: 250;
           font-style: normal;
           font-size: 42px;
           line-height: 62px;
           color:black;
           padding-bottom: 50px;;
     }

     .{{section.id}} .quiztext p{
     font-family: 'Work Sans';
     font-weight: 300;
       font-size: 16px;
       line-height: 24px;
       color: black;
       margin-bottom: 20px;
       padding-bottom: 15px;;
     }


    @media screen and (max-width: 749px) {
       .{{section.id}} {
           flex-direction: column;
           align-items: center;
           background: none; 
           height: auto;
           padding: 0;
           max-width: 100%;
       }

       .{{section.id}}::before {
           content: "";
           display: block;
           width: 100%;
           height: 200px; 
           background-image: url('{{ "phone-quiz.png" | asset_url }}');
           background-size: cover;
           background-position: center;
       }

       .{{section.id}} .quiztext {
           max-width: 100%;
           padding: 20px;
           text-align: left;
       }

       .{{section.id}} .quiztext h1 {
           font-size: 28px;
           line-height: 36px;
           padding-bottom: 20px;
       }

       .{{section.id}} .quiztext p {
           font-size: 14px;
           line-height: 20px;


       }
  }
</style>

<section class="{{section.id}}">
  <div class="quiztext">
    <h1>{{ heading_text }}</h1>
    <p>{{ short_description }}</p>
    <button class="button">
      <a href="{{button_link}}">{{ button_text }}</a>
    </button>
  </div>
</section>

{% schema %}
{
  "name": "Left Image Right Text",

  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Welcome to the World of Lea Black!"
    },
    {
      "type": "richtext",
      "id": "short_description",
      "label": "Short Description",
      "default": "<p>Lea Blackâ€™s business focus for more than twenty years has at its core the health, beauty, fitness, and wellness of women everywhere. She has an unparalleled track record of success in developing and marketing natural skincare products</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Right Side Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "take the quiz"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Left Image Right Text Section"
    }
  ]
}
{% endschema %}
