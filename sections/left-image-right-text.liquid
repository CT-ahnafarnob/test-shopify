{% liquid
  assign heading_text = section.settings.heading_text
  assign short_description = section.settings.short_description
  assign image = section.settings.image
  assign button_text = section.settings.button_text
  assign button_link = section.settings.button_link
%}

<style>
       @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
       @import url('https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap');

     .{{section.id}}  {
       display: flex;
       justify-content: flex-end;
       align-items: center;
       background-image: url('{{ 'banner_background.png' | asset_url }}');
       background-size: contain;  /* keeps image proportioned */
       background-repeat: no-repeat;
       background-position: left center;
       height: 550px;
       padding: 0; /* no extra horizontal padding */
       margin: 0 auto; /* center the section */
      max-width: 1400px; /* Shopify’s common desktop width */
       box-sizing: border-box;

     }

     .{{section.id}} .quiztext{
       max-width: 600px;
     margin-left: auto;
     padding-left: 50px;
     text-align: left;
     }

     .{{section.id}} .quiztext h1{
           font-family: 'Poppins';
           font-weight: 250;
           font-style: normal;
           font-size: 42px;
           line-height: 62px;
           color:black;
           padding-bottom: 50px;;
     }

     .{{section.id}} .quiztext p{
     font-family: 'Work Sans';
     font-weight: 300;
       font-size: 16px;
       line-height: 24px;
       color: black;
       margin-bottom: 20px;
       padding-bottom: 15px;;
     }


    @media screen and (max-width: 749px) {
       .{{section.id}} {
           flex-direction: column;
           align-items: center;
           background: none; /* remove desktop background image */
           height: auto;
           padding: 0;
           max-width: 100%;
       }

       .{{section.id}}::before {
           content: "";
           display: block;
           width: 100%;
           height: 200px; /* adjust to desired image height */
           background-image: url('{{ "phone-quiz.png" | asset_url }}');
           background-size: cover;
           background-position: center;
       }

       .{{section.id}} .quiztext {
           max-width: 100%;
           padding: 20px;
           text-align: left;
       }

       .{{section.id}} .quiztext h1 {
           font-size: 28px;
           line-height: 36px;
           padding-bottom: 20px;
       }

       .{{section.id}} .quiztext p {
           font-size: 14px;
           line-height: 20px;


       }
  }
</style>

<section class="{{section.id}}">
  <div class="quiztext">
    <h1>{{ heading_text }}</h1>
    <p>{{ short_description }}</p>
    <button class="button">
      <a href="{{button_link}}">{{ button_text }}</a>
    </button>
  </div>
</section>

{% schema %}
{
  "name": "Left Image Right Text",

  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Take Our Skincare Quiz"
    },
    {
      "type": "text",
      "id": "short_description",
      "label": "Short Description",
      "default": "Discover the key to radiant skin with Lea Black Beauty®’s personalized skincare quiz. In just a few moments, uncover a tailored routine of natural skincare products designed to meet your unique skin needs. Whether you're seeking hydration, anti-aging solutions, or the latest in CBD skincare, we’ll guide you to the perfect products to transform your skin."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Right Side Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "take the quiz"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Left Image Right Text Section"
    }
  ]
}
{% endschema %}
