            .{{section.id}} .container .topic svg {

            }
            .quote-icon{
          display: flex;
          justify-content: center;
          margin: 20px 0px;

            }
            .{{section.id}} .container .topic h2 {
                        font-family: "Poppins";
                        font-weight: 400;
                        font-size: 18px;
