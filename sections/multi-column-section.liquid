{% liquid
  assign default_images = "aging skin.png,Dry Skin.png,sensitive skin.png" | split: ","
%}

<style>
/* Section container */
.three-column-section {
  padding-top: 50px;
}





/* Grid layout */
.grid-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* Max 3 columns */
  gap: 10px;
  justify-content: center;
  max-width: 1200px;
  margin: 0 auto;
}

/* Card styling */
.card {
  background: rgb(245,245,245);
  text-align: left;
}

.card img {
  width: 100%;
  height: auto;
}

/* Card title */
.card h3 {
  font-family: 'Poppins';
  font-weight: 220;
  font-size: 26px;
  margin: 10px 0 5px;
  
}

.card h3 a {
  color: #1a5b80;
  text-decoration: none;
}

.card h3 a:hover {
  color: #000000;

}

/* Card description */
.card p {
  font-family: 'Work Sans';
  font-weight: 400;
  font-size: 16px;
  color: #555;
}

/* Shop Now button/link */
.card .shop-now {
  margin-top: 5px;
  color: #000;
  text-decoration: none;
  font-family: 'Work Sans';
  font-weight: 700;
  font-size: 18px;
  line-height: 28.8px;
}

.card .shop-now:hover {
  color: #1a5b80;
}

.card .shop-now::after {
  content: "→";
  margin-left: 5px;
  color: #999;
  font-size: 16px;
  line-height: 3;
}
.card-content {
  padding: 25px;
}

/* Responsive design */
/* Responsive design */
@media (max-width: 992px) {
  .grid-container {
    grid-template-columns: repeat(2, 1fr);
  }

   .p {
    font-size: 14px;
    text-align: center;
    padding: 0 15px;
  }
}

@media (max-width: 600px) {
  .grid-container {
    grid-template-columns: 1fr;
    gap: 20px; /* More breathing room between cards */
  }
}
</style>

<div class="three-column-section">
  <div class="shorttitle">{{ section.settings.section_title }}</div>
  <div class="p">{{ section.settings.section_description }}</div>

  <div class="grid-container">
    {% for block in section.blocks %}
      {% assign default_image = default_images[forloop.index0] %}
      <div class="card">
        {% if block.settings.image != blank %}
          <img src="{{ block.settings.image | image_url: width: 350 }}" alt="{{ block.settings.title }}" width="350" height="auto">
        {% else %}
          <img src="{{ default_image | asset_url }}" alt="{{ block.settings.title }}" width="350" height="auto">
        {% endif %}
<div class="card-content"><h3>
          <a href="{{ block.settings.link }}">
            {{ block.settings.title }}
          </a>
        </h3>
        <p>{{ block.settings.description }}</p>
        <a href="{{ block.settings.link }}" class="shop-now">Shop Now</a></div>
        
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "3 Column Image Cards",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Shop By Skin Concern"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "Your skin deserves a routine tailored to its unique needs. Explore our curated collections at Lea Black Beauty® to find solutions designed to target your specific concerns."
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Card Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Dry Skin"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Nourish and replenish your skin with ultra-hydrating natural skincare products that restore moisture and leave your complexion feeling soft and smooth."
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "3 Column Image Cards",
      "category": "Custom"
    }
  ]
}
{% endschema %}
